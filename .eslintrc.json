{
  "env": {
    "browser": true,
    "es6": true,
    "webextensions": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:no-unsanitized/DOM", "airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": { "prettier/prettier": "error" }
}
